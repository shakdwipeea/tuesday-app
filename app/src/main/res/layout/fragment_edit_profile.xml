<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="item"
            type="com.shakdwipeea.tuesday.data.entities.user.Provider"/>

        <variable
            name="vm"
            type="com.shakdwipeea.tuesday.profile.edit.EditProfileViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.shakdwipeea.tuesday.profile.edit.EditProfileFragment">

            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:src="@drawable/ic_users_11"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/camera_icon"
                    android:src="@drawable/camer"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom|right|end" />

            </FrameLayout>

            <EditText
                android:id="@+id/name_input"
                android:layout_margin="8dp"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/call_detail_list"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/provider_detail_edit"
                tools:numColumns="1"
                />


            <!--<Button-->
                <!--android:id="@+id/add_call_item"-->
                <!--android:background="#fff"-->
                <!--android:text="@string/add_another_account"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView
                android:text="Email"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/email_detail_list"
                android:scrollbars="vertical"
                tools:listitem="@layout/provider_detail_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!--<Button-->
                <!--android:id="@+id/add_email_item"-->
                <!--android:background="#fff"-->
                <!--android:text="@string/add_another_account"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView
                android:text="Social Accounts"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="15dp"
                android:id="@+id/provider_list"
                android:orientation="vertical"
                tools:listitem="@layout/provider_detail_edit"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/add_provider_item"
                android:background="@android:color/transparent"
                android:text="@string/add_another_account"
                android:onClick="@{() -> vm.addProviderAccount()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
