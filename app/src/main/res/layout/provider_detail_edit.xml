<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />
        <variable
            name="item"
            type="com.shakdwipeea.tuesday.data.entities.user.Provider"/>

        <variable
            name="itemDetail"
            type="com.shakdwipeea.tuesday.data.entities.user.ProviderDetails" />

        <variable
            name="vm"
            type="com.shakdwipeea.tuesday.profile.edit.EditProfileItemViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!--<TextView-->
            <!--tools:text="Phone"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="22sp"-->
            <!--android:padding="8dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="Primary"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:hint="@string/detail_label"
                android:inputType="text"
                android:maxLines="1"
                android:text="@{vm.getDetail()}"
                android:textSize="16sp"
                android:visibility="@{vm.showImportButton() ? View.GONE : View.VISIBLE}"
                tools:text="ashakdwipeea@gmail.com" />

            <Button
                android:id="@+id/import_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:background="@drawable/rectangle_rounded"
                android:hint="Import"
                android:text="@{vm.buttonText}"
                android:textColor="#ff439f"
                android:textSize="18sp"
                android:visibility="@{vm.showImportButton() ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <CheckBox
                android:id="@+id/detail_private_check"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{itemDetail.isPersonal}"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Private"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/detail_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_clear_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</layout>